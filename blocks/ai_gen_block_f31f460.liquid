<div class="color-{{ section.settings.color_scheme }} gradient section-{{ section.id }}-padding">
  <subscription-levels-{{ ai_gen_id }}
    class="ai-subscription-levels-{{ ai_gen_id }} page-width"
    {{ block.shopify_attributes }}
  >
    {% if block.settings.main_heading != blank or block.settings.main_subheading != blank %}
      <div class="ai-subscription-levels__header-{{ ai_gen_id }}">
        {% if block.settings.main_heading != blank %}
          <h2 class="ai-subscription-levels__title-{{ ai_gen_id }}">{{ block.settings.main_heading }}</h2>
        {% endif %}
        {% if block.settings.main_subheading != blank %}
          <p class="ai-subscription-levels__subtitle-{{ ai_gen_id }}">{{ block.settings.main_subheading }}</p>
        {% endif %}
      </div>
    {% endif %}

    <div class="ai-subscription-levels__grid-{{ ai_gen_id }}">
      {% for i in (1..3) %}
        {% liquid
          assign level_enabled_key = 'level_' | append: i | append: '_enabled'
          assign level_image_key = 'level_' | append: i | append: '_image'
          assign level_badge_key = 'level_' | append: i | append: '_badge'
          assign level_name_key = 'level_' | append: i | append: '_name'
          assign level_price_key = 'level_' | append: i | append: '_price'
          assign level_frequency_key = 'level_' | append: i | append: '_frequency'
          assign level_description_key = 'level_' | append: i | append: '_description'
          assign level_feature_1_key = 'level_' | append: i | append: '_feature_1'
          assign level_feature_2_key = 'level_' | append: i | append: '_feature_2'
          assign level_feature_3_key = 'level_' | append: i | append: '_feature_3'
          assign level_feature_4_key = 'level_' | append: i | append: '_feature_4'
          assign level_button_text_key = 'level_' | append: i | append: '_button_text'
          assign level_button_link_key = 'level_' | append: i | append: '_button_link'

          assign level_enabled = block.settings[level_enabled_key]
          assign level_image = block.settings[level_image_key]
          assign level_badge = block.settings[level_badge_key]
          assign level_name = block.settings[level_name_key]
          assign level_price = block.settings[level_price_key]
          assign level_frequency = block.settings[level_frequency_key]
          assign level_description = block.settings[level_description_key]
          assign level_feature_1 = block.settings[level_feature_1_key]
          assign level_feature_2 = block.settings[level_feature_2_key]
          assign level_feature_3 = block.settings[level_feature_3_key]
          assign level_feature_4 = block.settings[level_feature_4_key]
          assign level_button_text = block.settings[level_button_text_key]
          assign level_button_link = block.settings[level_button_link_key]
        %}

        {% if level_enabled %}
          <div class="ai-subscription-level-{{ ai_gen_id }}">
            <div class="ai-subscription-level__image-wrapper-{{ ai_gen_id }}">
              {% if level_image %}
                <img
                  src="{{ level_image | image_url: width: 800 }}"
                  alt="{{ level_image.alt | escape }}"
                  loading="lazy"
                  width="{{ level_image.width }}"
                  height="{{ level_image.height }}"
                  class="ai-subscription-level__image-{{ ai_gen_id }}"
                >
              {% else %}
                <div class="ai-subscription-level__image-placeholder-{{ ai_gen_id }}">
                  {{ 'product-1' | placeholder_svg_tag }}
                  <div class="ai-subscription-level__empty-state-{{ ai_gen_id }}">Add an image for Level {{ i }}</div>
                </div>
              {% endif %}

              {% if level_badge != blank %}
                <div class="ai-subscription-level__badge-{{ ai_gen_id }}">{{ level_badge }}</div>
              {% endif %}
            </div>

            <div class="ai-subscription-level__content-{{ ai_gen_id }}">
              {% if level_name != blank %}
                <h3 class="ai-subscription-level__name-{{ ai_gen_id }}">{{ level_name }}</h3>
              {% endif %}

              {% if level_price != blank %}
                <div class="ai-subscription-level__price-{{ ai_gen_id }}">{{ level_price }}</div>
              {% endif %}

              {% if level_frequency != blank %}
                <div class="ai-subscription-level__frequency-{{ ai_gen_id }}">{{ level_frequency }}</div>
              {% endif %}

              {% if level_description != blank %}
                <div class="ai-subscription-level__description-{{ ai_gen_id }}">{{ level_description }}</div>
              {% endif %}

              {% if level_feature_1 != blank
                or level_feature_2 != blank
                or level_feature_3 != blank
                or level_feature_4 != blank
              %}
                <ul class="ai-subscription-level__features-{{ ai_gen_id }}">
                  {% if level_feature_1 != blank %}
                    <li class="ai-subscription-level__feature-{{ ai_gen_id }}">
                      <svg
                        class="ai-subscription-level__feature-icon-{{ ai_gen_id }}"
                        xmlns="http://www.w3.org/2000/svg"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                      >
                        <polyline points="20 6 9 17 4 12"></polyline>
                      </svg>
                      <span>{{ level_feature_1 }}</span>
                    </li>
                  {% endif %}
                  {% if level_feature_2 != blank %}
                    <li class="ai-subscription-level__feature-{{ ai_gen_id }}">
                      <svg
                        class="ai-subscription-level__feature-icon-{{ ai_gen_id }}"
                        xmlns="http://www.w3.org/2000/svg"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                      >
                        <polyline points="20 6 9 17 4 12"></polyline>
                      </svg>
                      <span>{{ level_feature_2 }}</span>
                    </li>
                  {% endif %}
                  {% if level_feature_3 != blank %}
                    <li class="ai-subscription-level__feature-{{ ai_gen_id }}">
                      <svg
                        class="ai-subscription-level__feature-icon-{{ ai_gen_id }}"
                        xmlns="http://www.w3.org/2000/svg"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                      >
                        <polyline points="20 6 9 17 4 12"></polyline>
                      </svg>
                      <span>{{ level_feature_3 }}</span>
                    </li>
                  {% endif %}
                  {% if level_feature_4 != blank %}
                    <li class="ai-subscription-level__feature-{{ ai_gen_id }}">
                      <svg
                        class="ai-subscription-level__feature-icon-{{ ai_gen_id }}"
                        xmlns="http://www.w3.org/2000/svg"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                      >
                        <polyline points="20 6 9 17 4 12"></polyline>
                      </svg>
                      <span>{{ level_feature_4 }}</span>
                    </li>
                  {% endif %}
                </ul>
              {% endif %}

              {% if level_button_text != blank %}
                <a
                  href="{{ level_button_link }}"
                  class="ai-subscription-level__button-{{ ai_gen_id }}"
                >
                  {{ level_button_text }}
                </a>
              {% endif %}
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </subscription-levels-{{ ai_gen_id }}>
</div>
<script>
  (function() {
    class SubscriptionLevels{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        // Solo ejecuta si el ancho de pantalla es mayor a 1024px
        if (window.innerWidth > 1024) {
          this.setupScrollBehavior();
        }
      }

      setupScrollBehavior() {
        const levels = this.querySelectorAll('.ai-subscription-level-{{ ai_gen_id }}');
        
        const observerOptions = {
          root: null,
          rootMargin: '0px',
          threshold: 0.1
        };

        const observer = new IntersectionObserver((entries) => {
          entries.forEach(entry => {
            if (entry.isIntersecting) {
              entry.target.style.opacity = '1';
              entry.target.style.transform = 'translateY(0)';
            }
          });
        }, observerOptions);

        levels.forEach((level, index) => {
          level.style.opacity = '0';
          level.style.transform = 'translateY(30px)';
          level.style.transition = `opacity 0.6s ease ${index * 0.1}s, transform 0.6s ease ${index * 0.1}s`;
          observer.observe(level);
        });
      }
    }

    customElements.define('subscription-levels-{{ ai_gen_id }}', SubscriptionLevels{{ ai_gen_id }});
  })();
</script>

