{% doc %}
  @prompt
    create a one single column video section full widht, with text over video no timers, video has to be hosted on shopify., please include a call to action bottom over video, remove call to action
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-video-hero-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    height: {{ block.settings.video_height }}vh;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-video-hero__video-wrapper-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  .ai-video-hero__video-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-video-hero__overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: {{ block.settings.overlay_color }};
    opacity: {{ block.settings.overlay_opacity | divided_by: 100.0 }};
    z-index: 2;
  }

  .ai-video-hero__content-{{ ai_gen_id }} {
    position: relative;
    z-index: 3;
    text-align: {{ block.settings.text_alignment }};
    padding: 20px;
    max-width: {{ block.settings.content_max_width }}px;
    width: 100%;
  }

  .ai-video-hero__heading-{{ ai_gen_id }} {
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
    margin: 0 0 {{ block.settings.text_spacing }}px;
    line-height: 1.2;
  }

  .ai-video-hero__subheading-{{ ai_gen_id }} {
    color: {{ block.settings.subheading_color }};
    font-size: {{ block.settings.subheading_size }}px;
    margin: 0;
    line-height: 1.4;
  }

  @media screen and (max-width: 749px) {
    .ai-video-hero-{{ ai_gen_id }} {
      height: {{ block.settings.video_height_mobile }}vh;
    }

    .ai-video-hero__heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.6 }}px;
    }

    .ai-video-hero__subheading-{{ ai_gen_id }} {
      font-size: {{ block.settings.subheading_size | times: 0.7 }}px;
    }
  }
{% endstyle %}

<div class="ai-video-hero-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-video-hero__video-wrapper-{{ ai_gen_id }}">
    {% if block.settings.video != blank %}
      {{
        block.settings.video
        | video_tag:
          autoplay: true,
          loop: true,
          muted: true,
          playsinline: true,
          class: 'ai-video-hero__video-' | append: ai_gen_id
      }}
    {% else %}
      <div class="ai-video-hero__video-placeholder-{{ ai_gen_id }}" style="width: 100%; height: 100%; background-color: #f4f4f4; display: flex; align-items: center; justify-content: center;">
        <div style="text-align: center; color: #999; padding: 20px;">
          <svg xmlns="http://www.w3.org/2000/svg" width="80" height="80" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round">
            <polygon points="23 7 16 12 23 17 23 7"></polygon>
            <rect x="1" y="5" width="15" height="14" rx="2" ry="2"></rect>
          </svg>
          <p style="margin-top: 16px; font-size: 14px;">Next, add a video</p>
        </div>
      </div>
    {% endif %}
  </div>

  {% if block.settings.show_overlay %}
    <div class="ai-video-hero__overlay-{{ ai_gen_id }}"></div>
  {% endif %}

  <div class="ai-video-hero__content-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h2 class="ai-video-hero__heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
    {% endif %}

    {% if block.settings.subheading != blank %}
      <div class="ai-video-hero__subheading-{{ ai_gen_id }}">{{ block.settings.subheading }}</div>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Full width video",
  "tag": null,
  "settings": [
    {
      "type": "header",
      "content": "Video"
    },
    {
      "type": "video",
      "id": "video",
      "label": "Video"
    },
    {
      "type": "range",
      "id": "video_height",
      "min": 30,
      "max": 100,
      "step": 5,
      "unit": "vh",
      "label": "Desktop height",
      "default": 70
    },
    {
      "type": "range",
      "id": "video_height_mobile",
      "min": 30,
      "max": 100,
      "step": 5,
      "unit": "vh",
      "label": "Mobile height",
      "default": 50
    },
    {
      "type": "header",
      "content": "Overlay"
    },
    {
      "type": "checkbox",
      "id": "show_overlay",
      "label": "Show overlay",
      "default": true
    },
    {
      "type": "color",
      "id": "overlay_color",
      "label": "Overlay color",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "%",
      "label": "Overlay opacity",
      "default": 30
    },
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "inline_richtext",
      "id": "heading",
      "label": "Heading",
      "default": "Full width video"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "heading_size",
      "min": 20,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "Heading size",
      "default": 52
    },
    {
      "type": "richtext",
      "id": "subheading",
      "label": "Subheading",
      "default": "<p>Add your video and customize the text overlay</p>"
    },
    {
      "type": "color",
      "id": "subheading_color",
      "label": "Subheading color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "subheading_size",
      "min": 12,
      "max": 40,
      "step": 2,
      "unit": "px",
      "label": "Subheading size",
      "default": 18
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center"
    },
    {
      "type": "range",
      "id": "content_max_width",
      "min": 400,
      "max": 1200,
      "step": 50,
      "unit": "px",
      "label": "Content max width",
      "default": 800
    },
    {
      "type": "range",
      "id": "text_spacing",
      "min": 10,
      "max": 50,
      "step": 5,
      "unit": "px",
      "label": "Text spacing",
      "default": 20
    }
  ],
  "presets": [
    {
      "name": "Full width video"
    }
  ]
}
{% endschema %}
