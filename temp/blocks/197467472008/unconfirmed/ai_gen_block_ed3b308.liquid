    .ai-subscription-page-{{ ai_gen_id }} {
      padding: 40px 16px;
    }

    .ai-subscription-title-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.title_size }}px * 0.8);
    }

    .ai-subscription-levels-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
    }

    .ai-subscription-type-toggle-{{ ai_gen_id }},
    .ai-subscription-frequency-{{ ai_gen_id }},
    .ai-subscription-quantity-{{ ai_gen_id }},
    .ai-subscription-gift-options-{{ ai_gen_id }} {
      flex-direction: column;
    }

    .ai-subscription-type-button-{{ ai_gen_id }},
    .ai-subscription-frequency-option-{{ ai_gen_id }},
    .ai-subscription-quantity-option-{{ ai_gen_id }},
    .ai-subscription-gift-option-{{ ai_gen_id }} {
      min-width: 100%;
    }
  }
