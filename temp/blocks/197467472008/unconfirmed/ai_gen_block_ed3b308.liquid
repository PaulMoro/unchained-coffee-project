    display: block;
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    padding: 60px 20px;
    font-family: {{ block.settings.body_font.family }}, sans-serif;
    color: {{ block.settings.text_color }};
  }

  .ai-subscription-header-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: 60px;
  }

  .ai-subscription-title-{{ ai_gen_id }} {
    font-family: {{ block.settings.heading_font.family }}, sans-serif;
    font-size: {{ block.settings.title_size }}px;
    font-weight: 700;
    margin: 0 0 16px;
    color: {{ block.settings.heading_color }};
  }

  .ai-subscription-subtitle-{{ ai_gen_id }} {
    font-size: {{ block.settings.subtitle_size }}px;
    color: {{ block.settings.text_color }};
    opacity: 0.8;
    margin: 0;
  }

  .ai-subscription-step-{{ ai_gen_id }} {
    margin-bottom: 48px;
  }

  .ai-subscription-step-header-{{ ai_gen_id }} {
    font-family: {{ block.settings.heading_font.family }}, sans-serif;
    font-size: {{ block.settings.step_title_size }}px;
    font-weight: 600;
    margin: 0 0 20px;
    color: {{ block.settings.heading_color }};
  }

  .ai-subscription-levels-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 24px;
    margin-bottom: 48px;
  }

