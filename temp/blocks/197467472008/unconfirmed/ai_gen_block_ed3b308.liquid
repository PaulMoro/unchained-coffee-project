          <div class="ai-subscription-level-checkmark-{{ ai_gen_id }}">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="3" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
            </svg>
          </div>
          <h3 class="ai-subscription-level-name-{{ ai_gen_id }}">{{ block.settings.shifter_product.title }}</h3>
          <p class="ai-subscription-level-description-{{ ai_gen_id }}">{{ block.settings.shifter_description }}</p>
          <div class="ai-subscription-level-price-{{ ai_gen_id }}">{{ block.settings.shifter_product.price | money }}</div>
        </div>
      {% endif %}

      {% if block.settings.breaker_product != blank %}
        <div class="ai-subscription-level-{{ ai_gen_id }}" data-product-id="{{ block.settings.breaker_product.id }}" data-level="breaker">
          <div class="ai-subscription-level-checkmark-{{ ai_gen_id }}">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="3" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M4.5 12.75l6 6 9-13.5" />
            </svg>
          </div>
          <h3 class="ai-subscription-level-name-{{ ai_gen_id }}">{{ block.settings.breaker_product.title }}</h3>
          <p class="ai-subscription-level-description-{{ ai_gen_id }}">{{ block.settings.breaker_description }}</p>
          <div class="ai-subscription-level-price-{{ ai_gen_id }}">{{ block.settings.breaker_product.price | money }}</div>
        </div>
      {% endif %}
