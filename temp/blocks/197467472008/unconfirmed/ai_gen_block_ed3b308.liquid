  </div>

  <div class="ai-subscription-step-{{ ai_gen_id }}">
    <h2 class="ai-subscription-step-header-{{ ai_gen_id }}">{{ block.settings.quantity_heading }}</h2>
    <div class="ai-subscription-quantity-{{ ai_gen_id }}">
      <div class="ai-subscription-quantity-option-{{ ai_gen_id }}" data-quantity="250g">
        {{ block.settings.quantity_option_1 }}
