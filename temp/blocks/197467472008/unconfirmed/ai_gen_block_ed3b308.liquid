    border: 2px solid {{ block.settings.border_color }};
    border-radius: {{ block.settings.border_radius }}px;
    padding: 32px 24px;
    cursor: pointer;
    transition: all 0.3s ease;
    background: {{ block.settings.card_background }};
    position: relative;
  }

  .ai-subscription-level-{{ ai_gen_id }}:hover {
    border-color: {{ block.settings.accent_color }};
    transform: translateY(-4px);
  }

  .ai-subscription-level-{{ ai_gen_id }}.active {
    border-color: {{ block.settings.accent_color }};
    background: {{ block.settings.active_card_background }};
  }

  .ai-subscription-level-name-{{ ai_gen_id }} {
    font-family: {{ block.settings.heading_font.family }}, sans-serif;
    font-size: 24px;
    font-weight: 700;
    margin: 0 0 8px;
    color: {{ block.settings.heading_color }};
  }

  .ai-subscription-level-description-{{ ai_gen_id }} {
    font-size: 14px;
    color: {{ block.settings.text_color }};
    opacity: 0.8;
    margin: 0 0 16px;
    line-height: 1.5;
  }

  .ai-subscription-level-price-{{ ai_gen_id }} {
    font-size: 20px;
    font-weight: 600;
    color: {{ block.settings.accent_color }};
  }

  .ai-subscription-level-checkmark-{{ ai_gen_id }} {
    position: absolute;
    top: 16px;
    right: 16px;
    width: 24px;
    height: 24px;
    border-radius: 50%;
    background: {{ block.settings.accent_color }};
    display: none;
    align-items: center;
    justify-content: center;
  }

  .ai-subscription-level-{{ ai_gen_id }}.active .ai-subscription-level-checkmark-{{ ai_gen_id }} {
    display: flex;
  }

  .ai-subscription-level-checkmark-{{ ai_gen_id }} svg {
    width: 14px;
    height: 14px;
    stroke: white;
  }

  .ai-subscription-quantity-{{ ai_gen_id }} {
    display: flex;
    gap: 16px;
    flex-wrap: wrap;
  }

  .ai-subscription-quantity-option-{{ ai_gen_id }} {
    flex: 1;
    min-width: 140px;
    padding: 16px 24px;
    border: 2px solid {{ block.settings.border_color }};
    border-radius: {{ block.settings.border_radius }}px;
    background: {{ block.settings.card_background }};
    cursor: pointer;
    text-align: center;
    transition: all 0.3s ease;
    font-weight: 600;
  }

  .ai-subscription-quantity-option-{{ ai_gen_id }}:hover {
    border-color: {{ block.settings.accent_color }};
  }

  .ai-subscription-quantity-option-{{ ai_gen_id }}.active {
    border-color: {{ block.settings.accent_color }};
    background: {{ block.settings.active_card_background }};
    color: {{ block.settings.accent_color }};
  }

  .ai-subscription-type-toggle-{{ ai_gen_id }} {
    display: flex;
    gap: 16px;
    margin-bottom: 24px;
    flex-wrap: wrap;
  }

  .ai-subscription-type-button-{{ ai_gen_id }} {
    flex: 1;
    min-width: 200px;
    padding: 16px 24px;
    border: 2px solid {{ block.settings.border_color }};
    border-radius: {{ block.settings.border_radius }}px;
    background: {{ block.settings.card_background }};
    cursor: pointer;
    transition: all 0.3s ease;
    font-weight: 600;
    text-align: center;
  }

  .ai-subscription-type-button-{{ ai_gen_id }}:hover {
    border-color: {{ block.settings.accent_color }};
  }

  .ai-subscription-type-button-{{ ai_gen_id }}.active {
    border-color: {{ block.settings.accent_color }};
    background: {{ block.settings.active_card_background }};
    color: {{ block.settings.accent_color }};
  }

  .ai-subscription-type-content-{{ ai_gen_id }} {
    display: none;
  }

  .ai-subscription-type-content-{{ ai_gen_id }}.active {
    display: block;
  }

  .ai-subscription-frequency-{{ ai_gen_id }} {
    display: flex;
    gap: 16px;
    flex-wrap: wrap;
  }

  .ai-subscription-frequency-option-{{ ai_gen_id }} {
    flex: 1;
    min-width: 120px;
    padding: 16px 24px;
    border: 2px solid {{ block.settings.border_color }};
    border-radius: {{ block.settings.border_radius }}px;
    background: {{ block.settings.card_background }};
    cursor: pointer;
    text-align: center;
    transition: all 0.3s ease;
    font-weight: 600;
  }

  .ai-subscription-frequency-option-{{ ai_gen_id }}:hover {
    border-color: {{ block.settings.accent_color }};
  }

  .ai-subscription-frequency-option-{{ ai_gen_id }}.active {
    border-color: {{ block.settings.accent_color }};
    background: {{ block.settings.active_card_background }};
    color: {{ block.settings.accent_color }};
  }

  .ai-subscription-usage-description-{{ ai_gen_id }} {
    padding: 24px;
    border: 2px solid {{ block.settings.border_color }};
    border-radius: {{ block.settings.border_radius }}px;
    background: {{ block.settings.card_background }};
    line-height: 1.6;
  }

  .ai-subscription-gift-toggle-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 12px;
    margin-bottom: 24px;
    cursor: pointer;
  }

  .ai-subscription-gift-checkbox-{{ ai_gen_id }} {
    width: 24px;
    height: 24px;
    border: 2px solid {{ block.settings.border_color }};
    border-radius: 4px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: {{ block.settings.card_background }};
    transition: all 0.3s ease;
  }

  .ai-subscription-gift-checkbox-{{ ai_gen_id }}.active {
    background: {{ block.settings.accent_color }};
    border-color: {{ block.settings.accent_color }};
  }

  .ai-subscription-gift-checkbox-{{ ai_gen_id }} svg {
    width: 14px;
    height: 14px;
    stroke: white;
    display: none;
  }

  .ai-subscription-gift-checkbox-{{ ai_gen_id }}.active svg {
    display: block;
  }

  .ai-subscription-gift-label-{{ ai_gen_id }} {
    font-weight: 600;
    font-size: 16px;
  }

  .ai-subscription-gift-options-{{ ai_gen_id }} {
    display: none;
  }

  .ai-subscription-gift-options-{{ ai_gen_id }}.active {
    display: flex;
    gap: 16px;
    flex-wrap: wrap;
  }

  .ai-subscription-gift-option-{{ ai_gen_id }} {
    flex: 1;
    min-width: 100px;
    padding: 16px 24px;
    border: 2px solid {{ block.settings.border_color }};
    border-radius: {{ block.settings.border_radius }}px;
    background: {{ block.settings.card_background }};
    cursor: pointer;
    text-align: center;
    transition: all 0.3s ease;
    font-weight: 600;
  }

  .ai-subscription-gift-option-{{ ai_gen_id }}:hover {
    border-color: {{ block.settings.accent_color }};
  }

  .ai-subscription-gift-option-{{ ai_gen_id }}.active {
    border-color: {{ block.settings.accent_color }};
    background: {{ block.settings.active_card_background }};
    color: {{ block.settings.accent_color }};
  }

  .ai-subscription-cta-{{ ai_gen_id }} {
    margin-top: 48px;
    text-align: center;
  }

  .ai-subscription-cta-button-{{ ai_gen_id }} {
    display: inline-block;
    padding: 18px 48px;
    background: {{ block.settings.button_background }};
    color: {{ block.settings.button_text_color }};
    border: none;
    border-radius: {{ block.settings.border_radius }}px;
    font-size: 18px;
    font-weight: 700;
    cursor: pointer;
    transition: all 0.3s ease;
    text-decoration: none;
  }

  .ai-subscription-cta-button-{{ ai_gen_id }}:hover {
    background: {{ block.settings.button_hover_background }};
    transform: translateY(-2px);
  }

  .ai-subscription-cta-button-{{ ai_gen_id }}:disabled {
    opacity: 0.5;
    cursor: not-allowed;
    transform: none;
  }

