<script>
  (function() {
    class SubscriptionBuilder{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.state = {
          selectedLevel: null,
          selectedQuantity: null,
          selectedType: null,
          selectedFrequency: null,
          isGift: false,
          giftShipments: null
        };
      }

      connectedCallback() {
        this.setupEventListeners();
        this.updateCTAState();
      }

      setupEventListeners() {
        const levels = this.querySelectorAll('.ai-subscription-level-{{ ai_gen_id }}');
        levels.forEach(level => {
          level.addEventListener('click', () => this.selectLevel(level));
        });

        const quantities = this.querySelectorAll('.ai-subscription-quantity-option-{{ ai_gen_id }}');
        quantities.forEach(quantity => {
          quantity.addEventListener('click', () => this.selectQuantity(quantity));
        });

        const typeButtons = this.querySelectorAll('.ai-subscription-type-button-{{ ai_gen_id }}');
        typeButtons.forEach(button => {
          button.addEventListener('click', () => this.selectType(button));
        });

        const frequencies = this.querySelectorAll('.ai-subscription-frequency-option-{{ ai_gen_id }}');
        frequencies.forEach(frequency => {
          frequency.addEventListener('click', () => this.selectFrequency(frequency));
        });

        const giftToggle = this.querySelector('.ai-subscription-gift-toggle-{{ ai_gen_id }}');
        if (giftToggle) {
          giftToggle.addEventListener('click', () => this.toggleGift());
        }

        const giftOptions = this.querySelectorAll('.ai-subscription-gift-option-{{ ai_gen_id }}');
        giftOptions.forEach(option => {
          option.addEventListener('click', () => this.selectGiftShipments(option));
        });

        const ctaButton = this.querySelector('.ai-subscription-cta-button-{{ ai_gen_id }}');
        if (ctaButton) {
          ctaButton.addEventListener('click', () => this.handleSubscribe());
        }
      }

      selectLevel(level) {
        this.querySelectorAll('.ai-subscription-level-{{ ai_gen_id }}').forEach(l => l.classList.remove('active'));
        level.classList.add('active');
        this.state.selectedLevel = level.dataset.productId;
        this.updateCTAState();
      }

      selectQuantity(quantity) {
        this.querySelectorAll('.ai-subscription-quantity-option-{{ ai_gen_id }}').forEach(q => q.classList.remove('active'));
        quantity.classList.add('active');
        this.state.selectedQuantity = quantity.dataset.quantity;
        this.updateCTAState();
      }

      selectType(button) {
        this.querySelectorAll('.ai-subscription-type-button-{{ ai_gen_id }}').forEach(b => b.classList.remove('active'));
        button.classList.add('active');
        this.state.selectedType = button.dataset.type;

        this.querySelectorAll('.ai-subscription-type-content-{{ ai_gen_id }}').forEach(c => c.classList.remove('active'));
        const content = this.querySelector(`.ai-subscription-type-content-{{ ai_gen_id }}[data-content="${button.dataset.type}"]`);
        if (content) {
          content.classList.add('active');
        }

        if (button.dataset.type === 'usage') {
          this.state.selectedFrequency = 'usage';
        } else {
          this.state.selectedFrequency = null;
        }

        this.updateCTAState();
      }

      selectFrequency(frequency) {
        this.querySelectorAll('.ai-subscription-frequency-option-{{ ai_gen_id }}').forEach(f => f.classList.remove('active'));
        frequency.classList.add('active');
        this.state.selectedFrequency = frequency.dataset.frequency;
        this.updateCTAState();
      }

      toggleGift() {
        this.state.isGift = !this.state.isGift;
        const checkbox = this.querySelector('.ai-subscription-gift-checkbox-{{ ai_gen_id }}');
        const options = this.querySelector('.ai-subscription-gift-options-{{ ai_gen_id }}');

        if (this.state.isGift) {
          checkbox.classList.add('active');
          options.classList.add('active');
        } else {
          checkbox.classList.remove('active');
          options.classList.remove('active');
          this.state.giftShipments = null;
          this.querySelectorAll('.ai-subscription-gift-option-{{ ai_gen_id }}').forEach(o => o.classList.remove('active'));
        }

        this.updateCTAState();
      }

      selectGiftShipments(option) {
        this.querySelectorAll('.ai-subscription-gift-option-{{ ai_gen_id }}').forEach(o => o.classList.remove('active'));
        option.classList.add('active');
        this.state.giftShipments = option.dataset.shipments;
        this.updateCTAState();
      }

      updateCTAState() {
        const ctaButton = this.querySelector('.ai-subscription-cta-button-{{ ai_gen_id }}');
        if (!ctaButton) return;

        const isValid = this.state.selectedLevel &&
                       this.state.selectedQuantity &&
                       this.state.selectedType &&
                       this.state.selectedFrequency &&
                       (!this.state.isGift || this.state.giftShipments);

        ctaButton.disabled = !isValid;
      }

      handleSubscribe() {
        if (!this.state.selectedLevel) return;

        const productUrl = `/products/${this.state.selectedLevel}`;
        window.location.href = productUrl;
      }
    }

    customElements.define('subscription-builder-{{ ai_gen_id }}', SubscriptionBuilder{{ ai_gen_id }});
  })();
</script>

