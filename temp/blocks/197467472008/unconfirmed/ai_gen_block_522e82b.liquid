  .ai-coffee-card-title-{{ ai_gen_id }} {
    font-size: 18px;
    font-weight: 600;
    margin: 0 0 8px;
    color: {{ block.settings.text_color }};
  }

  .ai-coffee-card-description-{{ ai_gen_id }} {
    font-size: 14px;
    color: {{ block.settings.secondary_text_color }};
    line-height: 1.5;
    margin: 0;
  }

  .ai-variant-selector-{{ ai_gen_id }} {
    display: flex;
    gap: 12px;
    flex-wrap: wrap;
  }

  .ai-variant-option-{{ ai_gen_id }} {
    flex: 1;
    min-width: 120px;
    padding: 16px 24px;
    border: 2px solid {{ block.settings.card_border_color }};
    border-radius: {{ block.settings.button_border_radius }}px;
    background: {{ block.settings.card_background }};
    cursor: pointer;
    text-align: center;
    transition: all 0.3s ease;
    font-size: 16px;
    font-weight: 500;
    color: {{ block.settings.text_color }};
  }

  .ai-variant-option-{{ ai_gen_id }}:hover {
    border-color: {{ block.settings.card_border_hover_color }};
  }

  .ai-variant-option-{{ ai_gen_id }}.selected {
    border-color: {{ block.settings.card_border_selected_color }};
    background: {{ block.settings.card_selected_background }};
  }

  .ai-subscription-tabs-{{ ai_gen_id }} {
    display: flex;
    gap: 12px;
    margin-bottom: 32px;
    border-bottom: 2px solid {{ block.settings.divider_color }};
  }

  .ai-subscription-tab-{{ ai_gen_id }} {
    padding: 16px 24px;
    background: none;
    border: none;
    border-bottom: 3px solid transparent;
    cursor: pointer;
    font-size: 16px;
    font-weight: 500;
    color: {{ block.settings.secondary_text_color }};
    transition: all 0.3s ease;
    margin-bottom: -2px;
  }

