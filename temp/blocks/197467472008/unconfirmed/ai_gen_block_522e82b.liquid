  }

  .ai-cta-container-{{ ai_gen_id }} {
    position: sticky;
    bottom: 20px;
    background: {{ block.settings.cta_background }};
    padding: 24px;
    border-radius: {{ block.settings.button_border_radius }}px;
    box-shadow: 0 -4px 20px rgba(0, 0, 0, 0.1);
