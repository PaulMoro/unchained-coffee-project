{% endstyle %}

<subscription-page-{{ ai_gen_id }} class="ai-subscription-page-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  
  <div class="ai-subscription-section-{{ ai_gen_id }}">
    <h2 class="ai-subscription-section-title-{{ ai_gen_id }}">{{ block.settings.coffee_section_title }}</h2>
    {% if block.settings.coffee_section_description != blank %}
      <div class="ai-subscription-section-description-{{ ai_gen_id }}">{{ block.settings.coffee_section_description }}</div>
    {% endif %}
    
    <div class="ai-coffee-grid-{{ ai_gen_id }}" data-coffee-selector>
      {% for i in (1..4) %}
        {% liquid
          assign product_key = 'coffee_product_' | append: i
          assign product = block.settings[product_key]
        %}
        
        {% if product != blank %}
          <div class="ai-coffee-card-{{ ai_gen_id }} {% if forloop.first %}selected{% endif %}" data-coffee-card data-product-id="{{ product.id }}">
            {% if product.featured_image %}
              <img 
                src="{{ product.featured_image | image_url: width: 400 }}" 
                alt="{{ product.featured_image.alt | escape }}"
                class="ai-coffee-card-image-{{ ai_gen_id }}"
                loading="lazy"
                width="400"
                height="400"
              >
            {% else %}
              <div class="ai-coffee-card-image-placeholder-{{ ai_gen_id }}">
                {{ 'product-1' | placeholder_svg_tag }}
              </div>
            {% endif %}
            <h3 class="ai-coffee-card-title-{{ ai_gen_id }}">{{ product.title }}</h3>
            {% if product.description != blank %}
              <p class="ai-coffee-card-description-{{ ai_gen_id }}">{{ product.description | strip_html | truncate: 100 }}</p>
            {% endif %}
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>

  <div class="ai-subscription-section-{{ ai_gen_id }}">
    <h2 class="ai-subscription-section-title-{{ ai_gen_id }}">{{ block.settings.size_section_title }}</h2>
    
    <div class="ai-variant-selector-{{ ai_gen_id }}" data-variant-selector>
      <div class="ai-variant-option-{{ ai_gen_id }} selected" data-variant-option data-variant-size="250g">
        <div>250 g</div>
      </div>
      <div class="ai-variant-option-{{ ai_gen_id }}" data-variant-option data-variant-size="1kg">
        <div>1 kg</div>
      </div>
    </div>
  </div>

  <div class="ai-subscription-section-{{ ai_gen_id }}">
    <h2 class="ai-subscription-section-title-{{ ai_gen_id }}">{{ block.settings.subscription_section_title }}</h2>
    
    <div class="ai-subscription-tabs-{{ ai_gen_id }}" data-subscription-tabs>
      <button class="ai-subscription-tab-{{ ai_gen_id }} active" data-tab-button data-tab="frequency">
        {{ block.settings.frequency_tab_label }}
      </button>
      <button class="ai-subscription-tab-{{ ai_gen_id }}" data-tab-button data-tab="usage">
        {{ block.settings.usage_tab_label }}
      </button>
    </div>

    <div class="ai-subscription-tab-content-{{ ai_gen_id }} active" data-tab-content data-tab="frequency">
      <div class="ai-frequency-options-{{ ai_gen_id }}" data-frequency-selector>
        <div class="ai-frequency-option-{{ ai_gen_id }} selected" data-frequency-option data-frequency="weekly">
          Weekly
        </div>
        <div class="ai-frequency-option-{{ ai_gen_id }}" data-frequency-option data-frequency="biweekly">
          Every 2 weeks
        </div>
        <div class="ai-frequency-option-{{ ai_gen_id }}" data-frequency-option data-frequency="monthly">
          Monthly
        </div>
      </div>
      {% if block.settings.frequency_microcopy != blank %}
        <p class="ai-microcopy-{{ ai_gen_id }}">{{ block.settings.frequency_microcopy }}</p>
      {% endif %}
    </div>

    <div class="ai-subscription-tab-content-{{ ai_gen_id }}" data-tab-content data-tab="usage">
      <div class="ai-usage-info-{{ ai_gen_id }}">
        <h3 class="ai-usage-info-title-{{ ai_gen_id }}">{{ block.settings.usage_info_title }}</h3>
        <p class="ai-usage-info-text-{{ ai_gen_id }}">{{ block.settings.usage_info_text }}</p>
      </div>
