    aspect-ratio: 1;
    object-fit: cover;
    border-radius: {{ block.settings.card_border_radius }}px;
    margin-bottom: 16px;
  }

  .ai-coffee-card-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    aspect-ratio: 1;
    background-color: #f4f4f4;
    border-radius: {{ block.settings.card_border_radius }}px;
    margin-bottom: 16px;
    display: flex;
    align-items: center;
    justify-content: center;
