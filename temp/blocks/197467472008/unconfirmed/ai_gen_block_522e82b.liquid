<script>
  (function() {
    class SubscriptionPage{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.state = {
          selectedCoffee: null,
          selectedVariant: '250g',
          subscriptionType: 'frequency',
          frequency: 'weekly',
          giftShipments: null,
          basePrice: 0
        };
      }

      connectedCallback() {
        this.initializeElements();
        this.setupEventListeners();
        this.initializeState();
      }

      initializeElements() {
        this.coffeeCards = this.querySelectorAll('[data-coffee-card]');
        this.variantOptions = this.querySelectorAll('[data-variant-option]');
        this.tabButtons = this.querySelectorAll('[data-tab-button]');
        this.tabContents = this.querySelectorAll('[data-tab-content]');
        this.frequencyOptions = this.querySelectorAll('[data-frequency-option]');
        this.giftOptions = this.querySelectorAll('[data-gift-option]');
        this.ctaButton = this.querySelector('[data-cta-button]');
        this.priceDisplay = this.querySelector('[data-price-display]');
      }

      setupEventListeners() {
        this.coffeeCards.forEach(card => {
          card.addEventListener('click', () => this.handleCoffeeSelection(card));
        });

        this.variantOptions.forEach(option => {
          option.addEventListener('click', () => this.handleVariantSelection(option));
        });

        this.tabButtons.forEach(button => {
          button.addEventListener('click', () => this.handleTabChange(button));
        });

        this.frequencyOptions.forEach(option => {
          option.addEventListener('click', () => this.handleFrequencySelection(option));
        });

        this.giftOptions.forEach(option => {
          option.addEventListener('click', () => this.handleGiftSelection(option));
        });

        this.ctaButton.addEventListener('click', () => this.handleCTAClick());
      }

      initializeState() {
        const firstCoffee = this.coffeeCards[0];
        if (firstCoffee) {
          this.state.selectedCoffee = firstCoffee.dataset.productId;
        }
        this.updateCTAButton();
      }

      handleCoffeeSelection(card) {
        this.coffeeCards.forEach(c => c.classList.remove('selected'));
        card.classList.add('selected');
        this.state.selectedCoffee = card.dataset.productId;
        this.updateCTAButton();
      }

      handleVariantSelection(option) {
        this.variantOptions.forEach(o => o.classList.remove('selected'));
        option.classList.add('selected');
        this.state.selectedVariant = option.dataset.variantSize;
        this.updateCTAButton();
      }

      handleTabChange(button) {
        const tabName = button.dataset.tab;
        
        this.tabButtons.forEach(btn => btn.classList.remove('active'));
        button.classList.add('active');

        this.tabContents.forEach(content => {
          if (content.dataset.tab === tabName) {
            content.classList.add('active');
          } else {
            content.classList.remove('active');
          }
        });

        this.state.subscriptionType = tabName;
        this.updateCTAButton();
      }

      handleFrequencySelection(option) {
        this.frequencyOptions.forEach(o => o.classList.remove('selected'));
        option.classList.add('selected');
        this.state.frequency = option.dataset.frequency;
        this.updateCTAButton();
      }

      handleGiftSelection(option) {
        const isSelected = option.classList.contains('selected');
        
        this.giftOptions.forEach(o => o.classList.remove('selected'));
        
        if (!isSelected) {
          option.classList.add('selected');
          this.state.giftShipments = option.dataset.giftShipments;
        } else {
          this.state.giftShipments = null;
        }
        
        this.updateCTAButton();
      }

      updateCTAButton() {
        let buttonText = '{{ block.settings.cta_button_text }}';
        
        if (this.state.giftShipments) {
          buttonText = '{{ block.settings.cta_gift_button_text }}';
        } else if (this.state.subscriptionType === 'frequency') {
          buttonText = '{{ block.settings.cta_frequency_button_text }}';
        } else if (this.state.subscriptionType === 'usage') {
          buttonText = '{{ block.settings.cta_usage_button_text }}';
        }
        
        this.ctaButton.textContent = buttonText;
        
        if (!this.state.selectedCoffee) {
          this.ctaButton.disabled = true;
        } else {
          this.ctaButton.disabled = false;
        }
      }

      handleCTAClick() {
        if (!this.state.selectedCoffee) {
          return;
        }

        console.log('Subscription configuration:', this.state);
      }
    }

    customElements.define('subscription-page-{{ ai_gen_id }}', SubscriptionPage{{ ai_gen_id }});
  })();
</script>

