{% doc %}
  @prompt
    create a video banner, create a text column at letf side, create a section with a column text in left side and a video in the right side. 
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-text-video-section-{{ ai_gen_id }} {
    width: 100%;
    padding: {{ block.settings.section_padding_vertical }}px 0;
    background-color: {{ block.settings.background_color }};
  }

  .ai-text-video-section__container-{{ ai_gen_id }} {
    max-width: {{ block.settings.container_width }}px;
    margin: 0 auto;
    padding: 0 {{ block.settings.section_padding_horizontal }}px;
  }

  .ai-text-video-section__grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: 1fr;
    gap: {{ block.settings.column_gap }}px;
    align-items: center;
  }

  .ai-text-video-section__text-column-{{ ai_gen_id }} {
    order: 1;
  }

  .ai-text-video-section__video-column-{{ ai_gen_id }} {
    order: 2;
  }

  .ai-text-video-section__heading-{{ ai_gen_id }} {
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size_mobile }}px;
    margin: 0 0 {{ block.settings.heading_spacing }}px;
    line-height: 1.2;
  }

  .ai-text-video-section__text-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.text_size_mobile }}px;
    line-height: 1.6;
    margin: 0 0 {{ block.settings.text_spacing }}px;
  }

  .ai-text-video-section__text-{{ ai_gen_id }} p {
    margin: 0 0 16px;
  }

  .ai-text-video-section__text-{{ ai_gen_id }} p:last-child {
    margin-bottom: 0;
  }

  .ai-text-video-section__button-{{ ai_gen_id }} {
    display: inline-block;
    padding: 14px 28px;
    background-color: {{ block.settings.button_background }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_radius }}px;
    font-size: {{ block.settings.button_text_size }}px;
    transition: background-color 0.3s ease;
  }

  .ai-text-video-section__button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_background_hover }};
  }

  .ai-text-video-section__video-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    padding-bottom: 56.25%;
    overflow: hidden;
    background-color: #f4f4f4;
    border-radius: {{ block.settings.video_border_radius }}px;
  }

  .ai-text-video-section__video-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-text-video-section__video-controls-{{ ai_gen_id }} {
    position: absolute;
    bottom: 16px;
    right: 16px;
    z-index: 2;
    display: flex;
    gap: 8px;
  }

  .ai-text-video-section__control-button-{{ ai_gen_id }} {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background-color: rgba(255, 255, 255, 0.9);
    border: none;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: background-color 0.3s ease;
  }

  .ai-text-video-section__control-button-{{ ai_gen_id }}:hover {
    background-color: rgba(255, 255, 255, 1);
  }

  .ai-text-video-section__control-button-{{ ai_gen_id }} svg {
    width: 18px;
    height: 18px;
    fill: #121212;
  }

  .ai-text-video-section__placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f4f4f4;
  }

  .ai-text-video-section__placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 300px;
    max-height: 300px;
  }

  .ai-text-video-section__empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  @media screen and (min-width: 750px) {
    .ai-text-video-section__grid-{{ ai_gen_id }} {
      grid-template-columns: {{ block.settings.text_column_width }}% {{ 100 | minus: block.settings.text_column_width }}%;
      gap: {{ block.settings.column_gap_desktop }}px;
    }

    .ai-text-video-section__text-column-{{ ai_gen_id }} {
      order: 1;
    }

    .ai-text-video-section__video-column-{{ ai_gen_id }} {
      order: 2;
    }

    .ai-text-video-section__heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size_desktop }}px;
    }

    .ai-text-video-section__text-{{ ai_gen_id }} {
      font-size: {{ block.settings.text_size_desktop }}px;
    }
  }
{% endstyle %}

<text-video-section-{{ ai_gen_id }} class="ai-text-video-section-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-text-video-section__container-{{ ai_gen_id }}">
    <div class="ai-text-video-section__grid-{{ ai_gen_id }}">
      <div class="ai-text-video-section__text-column-{{ ai_gen_id }}">
        {% if block.settings.heading != blank %}
          <h2 class="ai-text-video-section__heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
        {% endif %}

        {% if block.settings.text != blank %}
          <div class="ai-text-video-section__text-{{ ai_gen_id }}">
            {{ block.settings.text }}
          </div>
        {% endif %}

        {% if block.settings.button_label != blank and block.settings.button_link != blank %}
          <a href="{{ block.settings.button_link }}" class="ai-text-video-section__button-{{ ai_gen_id }}">
            {{ block.settings.button_label }}
          </a>
        {% endif %}
      </div>

      <div class="ai-text-video-section__video-column-{{ ai_gen_id }}">
        <div class="ai-text-video-section__video-wrapper-{{ ai_gen_id }}">
          {% if block.settings.video_url != blank %}
            <video
              class="ai-text-video-section__video-{{ ai_gen_id }}"
              {% if block.settings.autoplay %}autoplay{% endif %}
              {% if block.settings.loop %}loop{% endif %}
              {% if block.settings.muted %}muted{% endif %}
              playsinline
              data-video
            >
              <source src="{{ block.settings.video_url }}" type="video/mp4">
            </video>

            {% if block.settings.show_controls %}
              <div class="ai-text-video-section__video-controls-{{ ai_gen_id }}">
                <button class="ai-text-video-section__control-button-{{ ai_gen_id }}" data-play-pause aria-label="Play or pause video">
                  <svg class="ai-text-video-section__play-icon-{{ ai_gen_id }}" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                    <path d="M8 5v14l11-7z"/>
                  </svg>
                  <svg class="ai-text-video-section__pause-icon-{{ ai_gen_id }}" style="display: none;" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                    <path d="M6 4h4v16H6V4zm8 0h4v16h-4V4z"/>
                  </svg>
                </button>
                <button class="ai-text-video-section__control-button-{{ ai_gen_id }}" data-mute-unmute aria-label="Mute or unmute video">
                  <svg class="ai-text-video-section__sound-icon-{{ ai_gen_id }}" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                    <path d="M3 9v6h4l5 5V4L7 9H3zm13.5 3c0-1.77-1.02-3.29-2.5-4.03v8.05c1.48-.73 2.5-2.25 2.5-4.02z"/>
                  </svg>
                  <svg class="ai-text-video-section__mute-icon-{{ ai_gen_id }}" style="display: none;" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                    <path d="M16.5 12c0-1.77-1.02-3.29-2.5-4.03v2.21l2.45 2.45c.03-.2.05-.41.05-.63zm2.5 0c0 .94-.2 1.82-.54 2.64l1.51 1.51C20.63 14.91 21 13.5 21 12c0-4.28-2.99-7.86-7-8.77v2.06c2.89.86 5 3.54 5 6.71zM4.27 3L3 4.27 7.73 9H3v6h4l5 5v-6.73l4.25 4.25c-.67.52-1.42.93-2.25 1.18v2.06c1.38-.31 2.63-.95 3.69-1.81L19.73 21 21 19.73l-9-9L4.27 3zM12 4L9.91 6.09 12 8.18V4z"/>
                  </svg>
                </button>
              </div>
            {% endif %}
          {% else %}
            <div class="ai-text-video-section__placeholder-{{ ai_gen_id }}">
              {{ 'image' | placeholder_svg_tag }}
              <div class="ai-text-video-section__empty-state-{{ ai_gen_id }}">
                Next, add a video URL
              </div>
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</text-video-section-{{ ai_gen_id }}>

<script>
  (function() {
    class TextVideoSection{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.video = this.querySelector('[data-video]');
        this.playPauseBtn = this.querySelector('[data-play-pause]');
        this.muteBtn = this.querySelector('[data-mute-unmute]');
      }

      connectedCallback() {
        if (!this.video) return;

        this.setupEventListeners();
        this.updateButtonStates();
      }

      setupEventListeners() {
        if (this.playPauseBtn) {
          this.playPauseBtn.addEventListener('click', () => this.togglePlayPause());
        }

        if (this.muteBtn) {
          this.muteBtn.addEventListener('click', () => this.toggleMute());
        }

        this.video.addEventListener('play', () => this.updateButtonStates());
        this.video.addEventListener('pause', () => this.updateButtonStates());
      }

      togglePlayPause() {
        if (this.video.paused) {
          this.video.play();
        } else {
          this.video.pause();
        }
      }

      toggleMute() {
        this.video.muted = !this.video.muted;
        this.updateButtonStates();
      }

      updateButtonStates() {
        const playIcon = this.querySelector('.ai-text-video-section__play-icon-{{ ai_gen_id }}');
        const pauseIcon = this.querySelector('.ai-text-video-section__pause-icon-{{ ai_gen_id }}');
        const soundIcon = this.querySelector('.ai-text-video-section__sound-icon-{{ ai_gen_id }}');
        const muteIcon = this.querySelector('.ai-text-video-section__mute-icon-{{ ai_gen_id }}');

        if (playIcon && pauseIcon) {
          if (this.video.paused) {
            playIcon.style.display = 'block';
            pauseIcon.style.display = 'none';
          } else {
            playIcon.style.display = 'none';
            pauseIcon.style.display = 'block';
          }
        }

        if (soundIcon && muteIcon) {
          if (this.video.muted) {
            soundIcon.style.display = 'none';
            muteIcon.style.display = 'block';
          } else {
            soundIcon.style.display = 'block';
            muteIcon.style.display = 'none';
          }
        }
      }
    }

    customElements.define('text-video-section-{{ ai_gen_id }}', TextVideoSection{{ ai_gen_id }});
  })();
</script>

