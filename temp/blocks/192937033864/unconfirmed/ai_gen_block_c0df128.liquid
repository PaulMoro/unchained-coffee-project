{% doc %}
  @prompt
    two columns section with text and video, i like it, but I prefer upload/host video in shopify files not url, I like it, but instead let's do a two columns video section with text over videos., we are close, now I need those videos looks and play like a background not like a regular video. I dont need timers.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-video-columns-{{ ai_gen_id }} {
    padding: {{ block.settings.padding_top }}px 0 {{ block.settings.padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-video-columns__container-{{ ai_gen_id }} {
    max-width: {{ block.settings.container_width }}px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-video-columns__grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: {{ block.settings.column_gap }}px;
  }

  .ai-video-columns__item-{{ ai_gen_id }} {
    position: relative;
    overflow: hidden;
    border-radius: {{ block.settings.video_radius }}px;
    min-height: {{ block.settings.min_height }}px;
  }

  .ai-video-columns__video-wrapper-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    overflow: hidden;
  }

  .ai-video-columns__video-wrapper-{{ ai_gen_id }} video {
    position: absolute;
    top: 50%;
    left: 50%;
    min-width: 100%;
    min-height: 100%;
    width: auto;
    height: auto;
    transform: translate(-50%, -50%);
    object-fit: cover;
  }

  .ai-video-columns__video-placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f4f4f4;
  }

  .ai-video-columns__video-placeholder-{{ ai_gen_id }} svg {
    width: 80px;
    height: 80px;
    opacity: 0.3;
  }

  .ai-video-columns__empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  .ai-video-columns__overlay-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    height: 100%;
    min-height: {{ block.settings.min_height }}px;
    background: linear-gradient(
      to bottom,
      rgba(0, 0, 0, 0) 0%,
      rgba(0, 0, 0, {{ block.settings.overlay_opacity | divided_by: 100.0 }}) 100%
    );
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    padding: {{ block.settings.text_padding }}px;
    z-index: 1;
  }

  .ai-video-columns__heading-{{ ai_gen_id }} {
    margin: 0 0 {{ block.settings.heading_spacing }}px;
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.heading_size }}px;
    line-height: 1.2;
  }

  .ai-video-columns__text-{{ ai_gen_id }} {
    margin: 0 0 {{ block.settings.text_spacing }}px;
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.text_size }}px;
    line-height: 1.6;
  }

  .ai-video-columns__button-{{ ai_gen_id }} {
    display: inline-block;
    padding: 12px 24px;
    background-color: {{ block.settings.button_background }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_radius }}px;
    transition: background-color 0.3s ease;
    align-self: flex-start;
  }

  .ai-video-columns__button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background }};
  }

  @media screen and (max-width: 749px) {
    .ai-video-columns__grid-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: {{ block.settings.mobile_gap }}px;
    }

    .ai-video-columns__item-{{ ai_gen_id }} {
      min-height: {{ block.settings.mobile_min_height }}px;
    }

    .ai-video-columns__overlay-{{ ai_gen_id }} {
      min-height: {{ block.settings.mobile_min_height }}px;
    }

    .ai-video-columns__heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
    }

    .ai-video-columns__text-{{ ai_gen_id }} {
      font-size: {{ block.settings.text_size | times: 0.9 }}px;
    }

    .ai-video-columns__overlay-{{ ai_gen_id }} {
      padding: {{ block.settings.text_padding | times: 0.7 }}px;
    }
  }
{% endstyle %}

<div class="ai-video-columns-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-video-columns__container-{{ ai_gen_id }}">
    <div class="ai-video-columns__grid-{{ ai_gen_id }}">
      <div class="ai-video-columns__item-{{ ai_gen_id }}">
        <div class="ai-video-columns__video-wrapper-{{ ai_gen_id }}">
          {% if block.settings.video_1 != blank %}
            {{
              block.settings.video_1
              | video_tag:
                image_size: '1100x',
                autoplay: true,
                loop: true,
                controls: false,
                muted: true
            }}
          {% else %}
            <div class="ai-video-columns__video-placeholder-{{ ai_gen_id }}">
              {{ 'image' | placeholder_svg_tag }}
              <div class="ai-video-columns__empty-state-{{ ai_gen_id }}">
                Next, upload a video
              </div>
            </div>
          {% endif %}
        </div>
        <div class="ai-video-columns__overlay-{{ ai_gen_id }}">
          {% if block.settings.heading_1 != blank %}
            <h2 class="ai-video-columns__heading-{{ ai_gen_id }}">
              {{ block.settings.heading_1 }}
            </h2>
          {% endif %}

          {% if block.settings.text_1 != blank %}
            <div class="ai-video-columns__text-{{ ai_gen_id }}">
              {{ block.settings.text_1 }}
            </div>
          {% endif %}

          {% if block.settings.button_text_1 != blank and block.settings.button_link_1 != blank %}
            <a href="{{ block.settings.button_link_1 }}" class="ai-video-columns__button-{{ ai_gen_id }}">
              {{ block.settings.button_text_1 }}
            </a>
          {% endif %}
        </div>
      </div>

      <div class="ai-video-columns__item-{{ ai_gen_id }}">
        <div class="ai-video-columns__video-wrapper-{{ ai_gen_id }}">
          {% if block.settings.video_2 != blank %}
            {{
              block.settings.video_2
              | video_tag:
                image_size: '1100x',
                autoplay: true,
                loop: true,
                controls: false,
                muted: true
            }}
          {% else %}
            <div class="ai-video-columns__video-placeholder-{{ ai_gen_id }}">
              {{ 'image' | placeholder_svg_tag }}
              <div class="ai-video-columns__empty-state-{{ ai_gen_id }}">
                Next, upload a video
              </div>
            </div>
          {% endif %}
        </div>
        <div class="ai-video-columns__overlay-{{ ai_gen_id }}">
          {% if block.settings.heading_2 != blank %}
            <h2 class="ai-video-columns__heading-{{ ai_gen_id }}">
              {{ block.settings.heading_2 }}
            </h2>
          {% endif %}

          {% if block.settings.text_2 != blank %}
            <div class="ai-video-columns__text-{{ ai_gen_id }}">
              {{ block.settings.text_2 }}
            </div>
          {% endif %}

          {% if block.settings.button_text_2 != blank and block.settings.button_link_2 != blank %}
            <a href="{{ block.settings.button_link_2 }}" class="ai-video-columns__button-{{ ai_gen_id }}">
              {{ block.settings.button_text_2 }}
            </a>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</div>

