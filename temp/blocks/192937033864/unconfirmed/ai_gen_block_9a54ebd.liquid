{% doc %}
  @prompt
    one columns section  full widht with text and video, i like it, but I prefer upload/host video in shopify files not url, I like it, but instead let's do a two columns video section with text over videos., we are close, now I need those videos looks and play like a background not like a regular video. I dont need timers.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-video-columns-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 0;
    width: 100%;
    min-height: {{ block.settings.section_height }}px;
  }

  .ai-video-column-{{ ai_gen_id }} {
    position: relative;
    overflow: hidden;
    min-height: {{ block.settings.section_height }}px;
  }

  .ai-video-background-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 1;
  }

  .ai-video-overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, {{ block.settings.overlay_opacity }});
    z-index: 2;
  }

  .ai-video-content-{{ ai_gen_id }} {
    position: relative;
    z-index: 3;
    display: flex;
    flex-direction: column;
    justify-content: {{ block.settings.content_vertical_alignment }};
    align-items: {{ block.settings.content_horizontal_alignment }};
    height: 100%;
    padding: {{ block.settings.content_padding }}px;
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-video-heading-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.heading_size }}px;
    margin: 0 0 16px 0;
    max-width: {{ block.settings.content_max_width }}px;
  }

  .ai-video-text-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.text_size }}px;
    margin: 0;
    max-width: {{ block.settings.content_max_width }}px;
  }

  .ai-video-placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 1;
  }

  .ai-video-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 200px;
    max-height: 200px;
  }

  .ai-video-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
    z-index: 2;
  }

  @media screen and (max-width: 749px) {
    .ai-video-columns-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
    }

    .ai-video-column-{{ ai_gen_id }} {
      min-height: {{ block.settings.mobile_height }}px;
    }

    .ai-video-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.7 }}px;
    }

    .ai-video-text-{{ ai_gen_id }} {
      font-size: {{ block.settings.text_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<div class="ai-video-columns-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-video-column-{{ ai_gen_id }}">
    {% if block.settings.video_1 %}
      <video
        class="ai-video-background-{{ ai_gen_id }}"
        autoplay
        loop
        muted
        playsinline
      >
        <source src="{{ block.settings.video_1 }}" type="video/mp4">
      </video>
    {% else %}
      <div class="ai-video-placeholder-{{ ai_gen_id }}">
        {{ 'image' | placeholder_svg_tag }}
        <div class="ai-video-empty-state-{{ ai_gen_id }}">
          Add video 1
        </div>
      </div>
    {% endif %}
    <div class="ai-video-overlay-{{ ai_gen_id }}"></div>
    <div class="ai-video-content-{{ ai_gen_id }}">
      {% if block.settings.heading_1 != blank %}
        <h2 class="ai-video-heading-{{ ai_gen_id }}">{{ block.settings.heading_1 }}</h2>
      {% endif %}
      {% if block.settings.text_1 != blank %}
        <div class="ai-video-text-{{ ai_gen_id }}">{{ block.settings.text_1 }}</div>
      {% endif %}
    </div>
  </div>

  <div class="ai-video-column-{{ ai_gen_id }}">
    {% if block.settings.video_2 %}
      <video
        class="ai-video-background-{{ ai_gen_id }}"
        autoplay
        loop
        muted
        playsinline
      >
        <source src="{{ block.settings.video_2 }}" type="video/mp4">
      </video>
    {% else %}
      <div class="ai-video-placeholder-{{ ai_gen_id }}">
        {{ 'image' | placeholder_svg_tag }}
        <div class="ai-video-empty-state-{{ ai_gen_id }}">
          Add video 2
        </div>
      </div>
    {% endif %}
    <div class="ai-video-overlay-{{ ai_gen_id }}"></div>
    <div class="ai-video-content-{{ ai_gen_id }}">
      {% if block.settings.heading_2 != blank %}
        <h2 class="ai-video-heading-{{ ai_gen_id }}">{{ block.settings.heading_2 }}</h2>
      {% endif %}
      {% if block.settings.text_2 != blank %}
        <div class="ai-video-text-{{ ai_gen_id }}">{{ block.settings.text_2 }}</div>
      {% endif %}
    </div>
  </div>
</div>

