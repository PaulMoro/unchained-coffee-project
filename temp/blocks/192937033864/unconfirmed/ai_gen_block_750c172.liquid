{% doc %}
  @prompt
    create a video banner, create a text column at letf side
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-text-column-{{ ai_gen_id }} {
    width: 100%;
    padding: {{ block.settings.padding_vertical }}px {{ block.settings.padding_horizontal }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-text-column__container-{{ ai_gen_id }} {
    max-width: {{ block.settings.container_width }}px;
    margin: 0 auto;
  }

  .ai-text-column__content-{{ ai_gen_id }} {
    max-width: {{ block.settings.column_width }}px;
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-text-column__heading-{{ ai_gen_id }} {
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
    margin: 0 0 {{ block.settings.heading_spacing }}px;
    line-height: 1.2;
  }

  .ai-text-column__text-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.text_size }}px;
    line-height: 1.6;
    margin: 0;
  }

  .ai-text-column__text-{{ ai_gen_id }} p {
    margin: 0 0 16px;
  }

  .ai-text-column__text-{{ ai_gen_id }} p:last-child {
    margin-bottom: 0;
  }

  @media screen and (max-width: 749px) {
    .ai-text-column-{{ ai_gen_id }} {
      padding: {{ block.settings.padding_vertical_mobile }}px {{ block.settings.padding_horizontal_mobile }}px;
    }

    .ai-text-column__heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size_mobile }}px;
    }

    .ai-text-column__text-{{ ai_gen_id }} {
      font-size: {{ block.settings.text_size_mobile }}px;
    }
  }
{% endstyle %}

<div class="ai-text-column-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-text-column__container-{{ ai_gen_id }}">
    <div class="ai-text-column__content-{{ ai_gen_id }}">
      {% if block.settings.heading != blank %}
        <h2 class="ai-text-column__heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
      {% endif %}

      {% if block.settings.text != blank %}
        <div class="ai-text-column__text-{{ ai_gen_id }}">
          {{ block.settings.text }}
        </div>
      {% endif %}
    </div>
  </div>
</div>

