{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-pricing-plans-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding_top }}px 20px {{ block.settings.section_padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-pricing-plans__container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
  }

  .ai-pricing-plans__header-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: 48px;
  }

  .ai-pricing-plans__title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.title_color }};
    margin: 0 0 16px;
  }

  .ai-pricing-plans__subtitle-{{ ai_gen_id }} {
    font-size: {{ block.settings.subtitle_size }}px;
    color: {{ block.settings.subtitle_color }};
    margin: 0;
  }

  .ai-pricing-plans__grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 32px;
    margin-top: 40px;
  }

  .ai-pricing-plan-{{ ai_gen_id }} {
    background-color: {{ block.settings.card_background }};
    border: {{ block.settings.card_border_width }}px solid {{ block.settings.card_border_color }};
    border-radius: {{ block.settings.card_border_radius }}px;
    padding: 40px 32px;
    text-align: center;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    position: relative;
  }

  .ai-pricing-plan-{{ ai_gen_id }}:hover {
    transform: translateY(-8px);
    box-shadow: 0 12px 24px rgba(0, 0, 0, 0.1);
  }

  .ai-pricing-plan-{{ ai_gen_id }}--featured {
    border-color: {{ block.settings.featured_border_color }};
    border-width: {{ block.settings.card_border_width | times: 2 }}px;
  }

  .ai-pricing-plan__badge-{{ ai_gen_id }} {
    position: absolute;
    top: -12px;
    left: 50%;
    transform: translateX(-50%);
    background-color: {{ block.settings.badge_background }};
    color: {{ block.settings.badge_text_color }};
    padding: 6px 16px;
    border-radius: 20px;
    font-size: 12px;
    font-weight: 600;
    text-transform: uppercase;
  }

  .ai-pricing-plan__name-{{ ai_gen_id }} {
    font-size: 24px;
    color: {{ block.settings.plan_name_color }};
    margin: 0 0 16px;
    font-weight: 600;
  }

  .ai-pricing-plan__price-{{ ai_gen_id }} {
    font-size: 48px;
    color: {{ block.settings.price_color }};
    font-weight: 700;
    margin: 0 0 8px;
    line-height: 1;
  }

  .ai-pricing-plan__period-{{ ai_gen_id }} {
    font-size: 16px;
    color: {{ block.settings.period_color }};
    margin: 0 0 24px;
  }

  .ai-pricing-plan__description-{{ ai_gen_id }} {
    font-size: 14px;
    color: {{ block.settings.description_color }};
    margin: 0 0 32px;
    line-height: 1.6;
  }

  .ai-pricing-plan__features-{{ ai_gen_id }} {
    list-style: none;
    padding: 0;
    margin: 0 0 32px;
    text-align: left;
  }

  .ai-pricing-plan__feature-{{ ai_gen_id }} {
    padding: 12px 0;
    color: {{ block.settings.feature_text_color }};
    font-size: 14px;
    display: flex;
    align-items: flex-start;
    gap: 12px;
  }

  .ai-pricing-plan__feature-icon-{{ ai_gen_id }} {
    flex-shrink: 0;
    width: 20px;
    height: 20px;
    color: {{ block.settings.feature_icon_color }};
  }

  .ai-pricing-plan__button-{{ ai_gen_id }} {
    display: inline-block;
    padding: 14px 32px;
    background-color: {{ block.settings.button_background }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-weight: 600;
    transition: background-color 0.3s ease;
    border: none;
    cursor: pointer;
    width: 100%;
  }

  .ai-pricing-plan__button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background }};
  }

  .ai-pricing-plan-{{ ai_gen_id }}--featured .ai-pricing-plan__button-{{ ai_gen_id }} {
    background-color: {{ block.settings.featured_button_background }};
    color: {{ block.settings.featured_button_text_color }};
  }

  .ai-pricing-plan-{{ ai_gen_id }}--featured .ai-pricing-plan__button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.featured_button_hover_background }};
  }

  @media screen and (max-width: 749px) {
    .ai-pricing-plans__grid-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: 24px;
    }

    .ai-pricing-plan__price-{{ ai_gen_id }} {
      font-size: 40px;
    }
  }
{% endstyle %}

<div class="ai-pricing-plans-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-pricing-plans__container-{{ ai_gen_id }}">
    {% if block.settings.title != blank or block.settings.subtitle != blank %}
      <div class="ai-pricing-plans__header-{{ ai_gen_id }}">
        {% if block.settings.title != blank %}
          <h2 class="ai-pricing-plans__title-{{ ai_gen_id }}">{{ block.settings.title }}</h2>
        {% endif %}
        {% if block.settings.subtitle != blank %}
          <div class="ai-pricing-plans__subtitle-{{ ai_gen_id }}">{{ block.settings.subtitle }}</div>
        {% endif %}
      </div>
    {% endif %}

    <div class="ai-pricing-plans__grid-{{ ai_gen_id }}">
      {% for i in (1..3) %}
        {% liquid
          assign plan_enabled_key = 'plan_' | append: i | append: '_enabled'
          assign plan_name_key = 'plan_' | append: i | append: '_name'
          assign plan_price_key = 'plan_' | append: i | append: '_price'
          assign plan_period_key = 'plan_' | append: i | append: '_period'
          assign plan_description_key = 'plan_' | append: i | append: '_description'
          assign plan_features_key = 'plan_' | append: i | append: '_features'
          assign plan_button_text_key = 'plan_' | append: i | append: '_button_text'
          assign plan_button_link_key = 'plan_' | append: i | append: '_button_link'
          assign plan_featured_key = 'plan_' | append: i | append: '_featured'
          assign plan_badge_key = 'plan_' | append: i | append: '_badge_text'

          assign plan_enabled = block.settings[plan_enabled_key]
          assign plan_name = block.settings[plan_name_key]
          assign plan_price = block.settings[plan_price_key]
          assign plan_period = block.settings[plan_period_key]
          assign plan_description = block.settings[plan_description_key]
          assign plan_features = block.settings[plan_features_key]
          assign plan_button_text = block.settings[plan_button_text_key]
          assign plan_button_link = block.settings[plan_button_link_key]
          assign plan_featured = block.settings[plan_featured_key]
          assign plan_badge = block.settings[plan_badge_key]
        %}

        {% if plan_enabled %}
          <div class="ai-pricing-plan-{{ ai_gen_id }} {% if plan_featured %}ai-pricing-plan-{{ ai_gen_id }}--featured{% endif %}">
            {% if plan_featured and plan_badge != blank %}
              <div class="ai-pricing-plan__badge-{{ ai_gen_id }}">{{ plan_badge }}</div>
            {% endif %}

            {% if plan_name != blank %}
              <h3 class="ai-pricing-plan__name-{{ ai_gen_id }}">{{ plan_name }}</h3>
            {% endif %}

            {% if plan_price != blank %}
              <div class="ai-pricing-plan__price-{{ ai_gen_id }}">{{ plan_price }}</div>
            {% endif %}

            {% if plan_period != blank %}
              <div class="ai-pricing-plan__period-{{ ai_gen_id }}">{{ plan_period }}</div>
            {% endif %}

            {% if plan_description != blank %}
              <div class="ai-pricing-plan__description-{{ ai_gen_id }}">{{ plan_description }}</div>
            {% endif %}

            {% if plan_features != blank %}
              {% assign features_array = plan_features | split: '|' %}
              <ul class="ai-pricing-plan__features-{{ ai_gen_id }}">
                {% for feature in features_array %}
                  <li class="ai-pricing-plan__feature-{{ ai_gen_id }}">
                    <svg class="ai-pricing-plan__feature-icon-{{ ai_gen_id }}" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                      <polyline points="20 6 9 17 4 12"></polyline>
                    </svg>
                    <span>{{ feature | strip }}</span>
                  </li>
                {% endfor %}
              </ul>
            {% endif %}

            {% if plan_button_text != blank %}
              <a href="{{ plan_button_link }}" class="ai-pricing-plan__button-{{ ai_gen_id }}">
                {{ plan_button_text }}
              </a>
            {% endif %}
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

