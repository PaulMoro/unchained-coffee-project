<div class="ai-office-program-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-office-program-container-{{ ai_gen_id }}">
    <div class="ai-office-program-hero-{{ ai_gen_id }}">
      {% if block.settings.subtitle != blank %}
        <div class="ai-office-program-subtitle-{{ ai_gen_id }}">
          {{ block.settings.subtitle }}
        </div>
      {% endif %}

      {% if block.settings.title != blank %}
        <h1 class="ai-office-program-title-{{ ai_gen_id }}">
          {{ block.settings.title }}
        </h1>
      {% endif %}

      {% if block.settings.description != blank %}
        <div class="ai-office-program-description-{{ ai_gen_id }}">
          {{ block.settings.description }}
        </div>
      {% endif %}
    </div>

    {% if block.settings.show_benefits %}
      <div class="ai-office-program-benefits-{{ ai_gen_id }}">
        {% if block.settings.benefits_title != blank %}
          <h2 class="ai-office-program-section-title-{{ ai_gen_id }}">
            {{ block.settings.benefits_title }}
          </h2>
        {% endif %}

        <div class="ai-office-program-benefits-grid-{{ ai_gen_id }}">
          {% for i in (1..6) %}
            {% liquid
              assign benefit_title_key = 'benefit_' | append: i | append: '_title'
              assign benefit_text_key = 'benefit_' | append: i | append: '_text'
              assign benefit_title = block.settings[benefit_title_key]
              assign benefit_text = block.settings[benefit_text_key]
            %}

            {% if benefit_title != blank %}
              <div class="ai-office-program-benefit-{{ ai_gen_id }}">
                <h3 class="ai-office-program-benefit-title-{{ ai_gen_id }}">
                  {{ benefit_title }}
                </h3>
                {% if benefit_text != blank %}
                  <p class="ai-office-program-benefit-text-{{ ai_gen_id }}">
                    {{ benefit_text }}
                  </p>
                {% endif %}
              </div>
            {% endif %}
          {% endfor %}
        </div>
      </div>
    {% endif %}

    {% if block.settings.show_how_it_works %}
      <div class="ai-office-program-how-it-works-{{ ai_gen_id }}">
        {% if block.settings.how_it_works_title != blank %}
          <h2 class="ai-office-program-section-title-{{ ai_gen_id }}">
            {{ block.settings.how_it_works_title }}
          </h2>
        {% endif %}

        <div class="ai-office-program-steps-{{ ai_gen_id }}">
          {% for i in (1..4) %}
            {% liquid
              assign step_title_key = 'step_' | append: i | append: '_title'
              assign step_text_key = 'step_' | append: i | append: '_text'
              assign step_title = block.settings[step_title_key]
              assign step_text = block.settings[step_text_key]
            %}

            {% if step_title != blank %}
              <div class="ai-office-program-step-{{ ai_gen_id }}">
                <div class="ai-office-program-step-number-{{ ai_gen_id }}">{{ i }}</div>
                <h3 class="ai-office-program-step-title-{{ ai_gen_id }}">
                  {{ step_title }}
                </h3>
                {% if step_text != blank %}
                  <p class="ai-office-program-step-text-{{ ai_gen_id }}">
                    {{ step_text }}
                  </p>
                {% endif %}
              </div>
            {% endif %}
          {% endfor %}
        </div>
      </div>
    {% endif %}

    {% if block.settings.show_plans %}
      <div class="ai-office-program-plans-{{ ai_gen_id }}">
        {% if block.settings.plans_title != blank %}
          <h2 class="ai-office-program-section-title-{{ ai_gen_id }}">
            {{ block.settings.plans_title }}
          </h2>
        {% endif %}

        <div class="ai-office-program-plans-grid-{{ ai_gen_id }}">
          {% for i in (1..3) %}
            {% liquid
              assign plan_name_key = 'plan_' | append: i | append: '_name'
              assign plan_capacity_key = 'plan_' | append: i | append: '_capacity'
              assign plan_features_key = 'plan_' | append: i | append: '_features'
              assign plan_name = block.settings[plan_name_key]
              assign plan_capacity = block.settings[plan_capacity_key]
              assign plan_features = block.settings[plan_features_key]
            %}

            {% if plan_name != blank %}
              <div class="ai-office-program-plan-{{ ai_gen_id }}">
                <h3 class="ai-office-program-plan-name-{{ ai_gen_id }}">
                  {{ plan_name }}
                </h3>
                {% if plan_capacity != blank %}
                  <p class="ai-office-program-plan-capacity-{{ ai_gen_id }}">
                    {{ plan_capacity }}
                  </p>
                {% endif %}
                {% if plan_features != blank %}
                  <ul class="ai-office-program-plan-features-{{ ai_gen_id }}">
                    {% assign features_array = plan_features | split: '|' %}
                    {% for feature in features_array %}
                      <li class="ai-office-program-plan-feature-{{ ai_gen_id }}">
                        {{ feature | strip }}
                      </li>
                    {% endfor %}
                  </ul>
                {% endif %}
              </div>
            {% endif %}
          {% endfor %}
        </div>
      </div>
    {% endif %}

    {% if block.settings.cta_text != blank %}
      <div class="ai-office-program-cta-{{ ai_gen_id }}">
        <a
          href="{{ block.settings.cta_link }}"
          class="ai-office-program-button-{{ ai_gen_id }}"
        >
          {{ block.settings.cta_text }}
        </a>
      </div>
    {% endif %}
  </div>
</div>

