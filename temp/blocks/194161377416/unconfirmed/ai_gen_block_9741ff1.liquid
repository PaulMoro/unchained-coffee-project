  }

  .ai-office-program-container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
  }

  .ai-office-program-hero-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: 80px;
  }

  .ai-office-program-subtitle-{{ ai_gen_id }} {
    font-size: 14px;
    text-transform: uppercase;
    letter-spacing: 2px;
    color: {{ block.settings.text_color }};
    margin-bottom: 20px;
    opacity: 0.8;
  }

  .ai-office-program-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.text_color }};
    margin: 0 0 30px;
    line-height: 1.2;
  }

  .ai-office-program-description-{{ ai_gen_id }} {
    font-size: {{ block.settings.description_size }}px;
    color: {{ block.settings.text_color }};
    max-width: 800px;
    margin: 0 auto;
    line-height: 1.6;
  }

  .ai-office-program-benefits-{{ ai_gen_id }} {
    margin-bottom: 80px;
  }

  .ai-office-program-section-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.section_title_size }}px;
    color: {{ block.settings.text_color }};
    text-align: center;
    margin: 0 0 50px;
  }

  .ai-office-program-benefits-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 30px;
  }

  .ai-office-program-benefit-{{ ai_gen_id }} {
    padding: 30px;
    background-color: {{ block.settings.card_background }};
    border-radius: {{ block.settings.card_radius }}px;
  }

  .ai-office-program-benefit-title-{{ ai_gen_id }} {
    font-size: 18px;
    font-weight: 600;
    color: {{ block.settings.text_color }};
    margin: 0 0 10px;
  }

  .ai-office-program-benefit-text-{{ ai_gen_id }} {
    font-size: 14px;
    color: {{ block.settings.text_color }};
    opacity: 0.9;
    line-height: 1.5;
  }

  .ai-office-program-how-it-works-{{ ai_gen_id }} {
    margin-bottom: 80px;
  }

  .ai-office-program-steps-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 40px;
  }

  .ai-office-program-step-{{ ai_gen_id }} {
    text-align: center;
  }

  .ai-office-program-step-number-{{ ai_gen_id }} {
    display: inline-block;
    width: 50px;
    height: 50px;
    border-radius: 50%;
    background-color: {{ block.settings.accent_color }};
    color: {{ block.settings.accent_text_color }};
    font-size: 24px;
    font-weight: 700;
    line-height: 50px;
    margin-bottom: 20px;
  }

  .ai-office-program-step-title-{{ ai_gen_id }} {
    font-size: 18px;
    font-weight: 600;
    color: {{ block.settings.text_color }};
    margin: 0 0 10px;
  }

  .ai-office-program-step-text-{{ ai_gen_id }} {
    font-size: 14px;
    color: {{ block.settings.text_color }};
    opacity: 0.9;
    line-height: 1.5;
  }

  .ai-office-program-plans-{{ ai_gen_id }} {
    margin-bottom: 60px;
  }

  .ai-office-program-plans-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 30px;
  }

  .ai-office-program-plan-{{ ai_gen_id }} {
    padding: 40px 30px;
    background-color: {{ block.settings.card_background }};
    border-radius: {{ block.settings.card_radius }}px;
    text-align: center;
    border: 2px solid transparent;
    transition: border-color 0.3s ease;
  }

  .ai-office-program-plan-{{ ai_gen_id }}:hover {
    border-color: {{ block.settings.accent_color }};
  }

  .ai-office-program-plan-name-{{ ai_gen_id }} {
    font-size: 24px;
    font-weight: 700;
    color: {{ block.settings.text_color }};
    margin: 0 0 10px;
  }

  .ai-office-program-plan-capacity-{{ ai_gen_id }} {
    font-size: 14px;
    color: {{ block.settings.text_color }};
    opacity: 0.8;
    margin-bottom: 20px;
  }

  .ai-office-program-plan-features-{{ ai_gen_id }} {
    list-style: none;
    padding: 0;
    margin: 0 0 30px;
    text-align: left;
  }

  .ai-office-program-plan-feature-{{ ai_gen_id }} {
    font-size: 14px;
    color: {{ block.settings.text_color }};
    padding: 8px 0;
    border-bottom: 1px solid rgba(0, 0, 0, 0.1);
  }

  .ai-office-program-plan-feature-{{ ai_gen_id }}:last-child {
    border-bottom: none;
  }

  .ai-office-program-cta-{{ ai_gen_id }} {
    text-align: center;
  }

  .ai-office-program-button-{{ ai_gen_id }} {
    display: inline-block;
    padding: 16px 40px;
    background-color: {{ block.settings.button_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_radius }}px;
    font-size: 16px;
    font-weight: 600;
    transition: background-color 0.3s ease;
  }

