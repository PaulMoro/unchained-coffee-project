<script>
(function() {
  class UnchainedSubscription{{ ai_gen_id }} extends HTMLElement {
    constructor() {
      super();
      this.selections = {
        coffee: null,
        bagSize: null,
        delivery: null
      };
    }

    connectedCallback() {
      this.setupOptionSelectors();
    }

    setupOptionSelectors() {
      const optionGroups = this.querySelectorAll('[data-option-group]');
      
      optionGroups.forEach(group => {
        const groupType = group.getAttribute('data-option-group');
        const options = group.querySelectorAll('.ai-subscription-option-{{ ai_gen_id }}');
        
        options.forEach(option => {
          option.addEventListener('click', () => {
            options.forEach(opt => opt.classList.remove('selected'));
            option.classList.add('selected');
            
            const optionValue = option.getAttribute('data-option');
            this.selections[groupType] = optionValue;
            
            this.dispatchEvent(new CustomEvent('subscription-option-changed', {
              detail: {
                group: groupType,
                value: optionValue,
                selections: this.selections
              },
              bubbles: true
            }));
          });
        });
      });
    }
  }

  customElements.define('unchained-subscription-{{ ai_gen_id }}', UnchainedSubscription{{ ai_gen_id }});
})();
</script>

